<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2RPS.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            
            <Label
                x:Name="User"
                Text="User's answer:"
                SemanticProperties.Hint="Text box"
                HorizontalOptions="Center"
                FontSize="18"/>
            
            <Label
                x:Name="DisplayUser"
                Text=""
                SemanticProperties.Hint="Shows the computers choice."
                HorizontalOptions="Center"
                FontSize="18"/>

            <Label
                x:Name="Comp"
                Text="Comp's Answer:"
                SemanticProperties.Hint="Text box"
                HorizontalOptions="Center"
                FontSize="18"/>

            <Label
                x:Name="DisplayComp"
                Text=""
                SemanticProperties.Hint="Shows the computers choice."
                HorizontalOptions="Center"
                FontSize="18"/>

            <Label
                x:Name="Results"
                Text="Result"
                SemanticProperties.Hint="Text box"
                HorizontalOptions="Center"
                FontSize="18"/>
            
            <Label
                x:Name="DisplayResults"
                Text=""
                SemanticProperties.Hint="Shows the results"
                HorizontalOptions="Center"
                FontSize="18"/>
            
            <Button
                x:Name="UserBtn1"
                Text="ROCK"
                SemanticProperties.Hint="User chooses rock"
                Clicked="UserClick1"
                HorizontalOptions="Center" />
            
            <Button
                x:Name="UserBtn2"
                Text="PAPER"
                SemanticProperties.Hint="User chooses paper"
                Clicked="UserClick2"
                HorizontalOptions="Center" />
            
            <Button
                x:Name="UserBtn3"
                Text="SCISSORS"
                SemanticProperties.Hint="User chooses scissors"
                Clicked="UserClick3"
                HorizontalOptions="Center" />
                

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
